model Episode {
  id String @id @default(uuid())

  number      Int
  title       String
  releaseDate DateTime?
  duration    Int?

  videoUrl String?

  season   Season @relation(fields: [seasonId], references: [id])
  seasonId String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("update_at")

  @@map("episode")
}
